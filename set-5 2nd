        /* Apply styles to the container */
        .box-container {
            width: 300px;
            margin: 20px;
            padding: 20px;
            border: 5px solid #333;
            background-color: #f0f0f0;
        }

        /* Apply styles to the content */
        .box-content {
            width: 250px;
            height: 100px;
            background-color: #b3d9ff;
            padding: 10px;
            border: 1px solid #666;
        }
    </style>
